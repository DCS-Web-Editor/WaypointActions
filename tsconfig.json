{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": false,
    "esModuleInterop": true,
    "noEmit": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": ["naive-ui/volar"],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@task/options/*": ["tasks/options/*"],
      "@task/enroute/*": ["tasks/enrouteTask/*"],
      "@task/perform/*": ["tasks/performTask/*"],
      "@types": ["types.ts"],
      "@stores/*": ["stores/*"],
    }
  },
  "include": ["src/vite-env.d.ts", ".eslintrc.cjs", "src/**/*", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
